<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
>
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/linearLayout"
                  android:orientation="vertical"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.022"
                  android:padding="15dp"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text=" New Timer"
                  android:textAllCaps="true"
                  android:textFontWeight="300"
                  android:textSize="20sp"
                  android:fontFamily="sans-serif"
                  android:layout_marginBottom="5dp"
        />

        <EditText android:layout_weight="1"
                  android:id="@+id/timerLabelInput"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:inputType="textCapSentences"
                  android:fontFamily="sans-serif"
                  android:textFontWeight="300"
                  android:outlineAmbientShadowColor="#111111"
                  android:textCursorDrawable="@null"
                  android:hint="TIMER NAME"
                  android:backgroundTint="#111111"
                  android:autofillHints="uhh"
                  tools:layout_editor_absoluteY="729dp"
                  tools:layout_editor_absoluteX="6dp">

            <requestFocus/>
        </EditText>

        <EditText android:layout_weight="1"
                  android:id="@+id/timerDescriptionInput"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:inputType="textCapSentences"
                  android:fontFamily="sans-serif"
                  android:textFontWeight="300"
                  android:outlineAmbientShadowColor="#111111"
                  android:textCursorDrawable="@null"
                  android:hint="TIMER DESCRIPTION"
                  android:backgroundTint="#111111"
                  android:autofillHints="uhh" tools:layout_editor_absoluteY="729dp"
                  tools:layout_editor_absoluteX="6dp">
        </EditText>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add"
                android:textAllCaps="true"
                android:layout_gravity="right"
                android:shadowColor="@null"
                android:shadowDx="0"
                android:shadowDy="0"
                android:background="@drawable/now_tracking_border"
                android:textFontWeight="300"
                android:fontFamily="sans-serif"
                android:clickable="true"
                android:id="@+id/addNewTimerButton"

        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>